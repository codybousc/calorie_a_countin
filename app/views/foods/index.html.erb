

<div class="well container col-md-5">
  <h2 class="center"><span id="food-calorie-counter"><%= @calorie_total %></span></h2>
  <p class="center">calories consumed</p>

  <p class="center"><span class="btn btn-default"><%= link_to "Enter Food", new_food_path, id: "good_shit", remote: true %></span></p>

  <table id="food_table">
    <tr>
      <th class="first_column">Food</th>
      <th>Calories</th>
    </tr>

    <!-- <%= render(@foods) %> -->

    <% @foods.each do |x| %>
      <%= render 'food', food: x %>
    <% end %>

  </table>
</div>

<div class="col-md-1">

</div>

<div class="well container col-md-5">
  <h2 class="center"><span class="exercise-calorie-total"><%= @calories_burned %></span></h2>
  <p class="center">calories burned</p>

  <p class="center"><span class="btn btn-default"><%= link_to 'Enter Exercise', new_exercise_path, id: "enter-exercise-link", remote: true %></span></p>

  <table id="exercise_table">
    <tr>
      <th class="first_column">Exercise</th>
      <th>Calories</th>
    </tr>
    <% @exercises.each do |x| %>
      <%= render 'exercises/exercise', exercise: x %>
    <% end %>
  </table>
</div>
